{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="heading">List of authors</h1>
        <button type="button" style="width:100%" class="btn btn-outline-dark btn-block">Add new author</button>
        {% if aut is defined %}
            <table class="table table-hover" style="width: 100%">
                <thead>
                    <th>ID</th>
                    <th>Author</th>
                    <th>Edit</th>
                    <th>Remove</th>
                </thead>
                <tbody>
                {% for a in aut %}
                    <tr>
                        <td>{{ a.id }}</td>
                        <td>{{ a.name }}</td>
                        <td><button type="button" class="btn btn-outline-dark btn-sm">Edit</button></td>
                        <td><button type="button" class="btn btn-outline-dark btn-sm">Remove</button></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

    {% endif %}
{% endblock %}