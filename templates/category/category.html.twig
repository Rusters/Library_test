{% extends 'base.html.twig' %}
{% block body %}
    <h1 class="heading">List of categories</h1>
    <a href="/category/categoryAdd" style="width:100%" class="btn btn-outline-dark btn-block">Add new category</a>
    {% if categ is defined %}
        <table class="table table-hover" style="width: 100%">
            <thead>
            <th>ID</th>
            <th>name</th>
            <th>Edit</th>
            <th>Remove</th>
            </thead>
            <tbody>
            {% for c in categ %}
                <tr>
                    <td>{{ c.id }}</td>
                    <td>{{ c.name }}</td>
                    <td><a href="/category/categoryEdit/{{ c.id }}" class="btn btn-outline-dark btn-sm">Edit</a></td>
                    <td><button type="button" data-remove="{{ c.id }}" class="bat">Remove</button></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="/assets/js/category/categoryRemove.js"></script>
{% endblock %}