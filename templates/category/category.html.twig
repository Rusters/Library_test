{% extends 'base.html.twig' %}
{% block body %}
    <h1 class="heading">List of categories</h1>
    <button type="button" style="width:100%" class="btn btn-outline-dark btn-block">Add new book</button>
    {% if categ is defined %}
        <table class="table table-hover" style="width: 100%">
            <thead>
            <th>ID</th>
            <th>name</th>
            <th>Edit</th>
            <th>Remove</th>
            </thead>
            <tbody>
            {% for c in categ %}
                <tr>
                    <td>{{ c.id }}</td>
                    <td>{{ c.name }}</td>
                    <td><button type="button" class="btn btn-outline-dark btn-sm">Edit</button></td>
                    <td><button type="button" class="btn btn-outline-dark btn-sm">Remove</button></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    {% endif %}
{% endblock %}